<!DOCTYPE html>
<html>
<head>
  <title>ToDoHub</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
</head>
<body>

  <div class = "container">
    <% if current_user %>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "Check", users_path , class:"navbar-brand" %>
      </div>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <a href="#" data-toggle="popover" title="<%= current_user.email %>" data-content="Change Password" data-placement="bottom"><%= current_user.name %></a>
      </li>
      <li>
        <%= link_to "Logout", destroy_user_session_path , method: :delete %>
      </li>
    </ul>
    </div>
  </nav>
  <% end %>
  <% flash.each do |name, msg| %>
        <div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <strong></strong> <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
  <% end %>
    <%= yield %>
  </div>

  <script>
    $(document).ready(function(){
        $('[data-toggle="popover"]').popover();
    });
  </script>
</body>
</html>
